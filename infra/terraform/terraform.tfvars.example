# Terraform variables file
# Copy this to terraform.tfvars and customize for your environment

# AWS Configuration
aws_region = "us-east-1"
environment = "prod"
project_name = "ec2-auto-recovery"

# Lambda configuration
lambda_runtime = "python3.12"
lambda_timeout = 300
lambda_memory_size = 512

# SNS configuration (optional - set enable_sns = false if only using webhooks)
sns_topic_name = "ec2-auto-recovery-notifications"
enable_sns = false  # Set to true if you want SNS notifications

# Notification webhooks (at least one recommended)
slack_webhook_url = "https://hooks.slack.com/services/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"
slack_channel = "#team-collab"
slack_username = "Sumanth Nallandhigal"

# teams_webhook_url = "https://outlook.office.com/webhook/YOUR/WEBHOOK/URL"

# Monitoring schedule (cron or rate expression)
monitoring_schedule = "rate(1 hour)"  # Run every hour
# Alternative: "cron(0 * * * ? *)" for hourly at minute 0

# Feature flags
enable_notifications = true

# Prediction thresholds
prediction_lookback_hours = 168  # 7 days
high_confidence_threshold = 0.8
medium_confidence_threshold = 0.6

